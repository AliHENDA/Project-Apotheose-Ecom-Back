{% extends 'base.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% block body %}
<div class="container">
    <h1>Produit : {{ product.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td><img src="{{ product.picture }}" width="100px" alt=""></td>
            </tr>
            <tr>
                <th>Genre</th>
                <td>{{ product.gender }}</td>
            </tr>
            <tr>
                <th>Couleur</th>
                <td>{{ product.color }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ product.rate }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Best_sellers_order</th>
                <td>{{ product.bestSellersOrder }}</td>
            </tr>
            <tr>
                <th>Crée le</th>
                <td>{{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Dernière modification</th>
                <td>{{ product.updatedAt ? product.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_product_index') }}" class="btn btn-primary">Retour</a>

    <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-warning">Modifier</a>

    {{ include('product/_delete_form.html.twig') }}

    </div>

    
{% endblock %}
