{% extends 'base.html.twig' %}

{% block title %}{{ category.name }}{% endblock %}

{% block body %}

<div class="container">
    <h1>Categorie : {{ category.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Phpto</th>
                <td><img src="{{ category.picture }}" alt=""></td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ category.description }}</td>
            </tr>
            <tr>
                <th>Créé le</th>
                <td>{{ category.createdAt ? category.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Dernière modification</th>
                <td>{{ category.updatedAt ? category.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
    <div>
    <a href="{{ path('app_category_index') }}" class="btn btn-primary mb-1">Retour</a>

    <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-warning mb-1">Modifier</a>

    {{ include('category/_delete_form.html.twig') }}

</div>
{% endblock %}
